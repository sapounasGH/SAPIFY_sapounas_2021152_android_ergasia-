<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:id="@+id/adsong"
    tools:context=".Add_song"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded"
    android:backgroundTint="@color/blackgrey"
    android:padding="15dp"
    >
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add your song here!"
        android:layout_marginBottom="100dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/idET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:background="@drawable/roundedtxt"
        android:paddingStart="20dp"
        android:hint="id"
        />

    <EditText
        android:id="@+id/songnameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Song"
        android:minHeight="48dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/roundedtxt"
        android:paddingStart="20dp"
        />

    <EditText
        android:id="@+id/aristET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Artist"
        android:minHeight="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedtxt"
        android:paddingStart="20dp"
        />

    <Button
        android:id="@+id/mp3path"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Insert Mp3 File"
        android:backgroundTint="@color/bckpurple"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/addbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add"
        android:backgroundTint="@color/bckpurple"
        android:textColor="@color/white"
        />

    <Button
        android:id="@+id/deletebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Delete"
        android:backgroundTint="@color/bckpurple"
        android:textColor="@color/white"
        />




</LinearLayout>